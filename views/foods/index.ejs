<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
      <%- include("../partials/navbar.ejs") %>
    <h1>Welcome to my Pantry</h1>
     <a href="/users/<%= user._id %>/foods/new">Add a New Food Item</a>
     <ul>
      <% pantry.forEach((foods) => { %>
        <a href="/users/<%= user._id %>/foods/<%= foods._id %>">
        <li><%= foods.name %></li>
        </a>
          <form action="/users/<%= user._id %>/foods/<%= foods._id %>?_method=DELETE"
      method="POST"
      >
    <button type="submit">Delete this Food</button>
    </form>
        <% }); %>
     </ul>
   
  </body>
</html>
